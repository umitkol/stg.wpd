.sep-border
 	border 1px solid $silver

.sep-border-bottom
	border-bottom 1px solid $light_gray

.sep-full-line
  width 100%
  height 1px
  border-bottom 1px solid $dark_gray

.sep-bot
	before()

	&:before
		width 100%
		height 2px
		background url(../images/sep/sep-bot01.png) 0 0 repeat-x
		position absolute
		top auto
		bottom 0
		left 0

.sep-top
	after()

	&:after
		width 100%
		height 2px
		background url(../images/sep/sep-bot01.png) 0 0 repeat-x
		position absolute
		top 0
		bottom auto
		left 0

.sep-right
	after()

	&:after
		width 2px
		height 100%
		background url(../images/sep/sep-v01.png) 0 0 repeat-y
		position absolute
		top 0
		left auto
		right 0

.sep-left
	before()

	&:before
		width 2px
		height 100%
		background url(../images/sep/sep-v01.png) 0 0 repeat-y
		position absolute
		top 0
		left 0
		right auto

.sep-center
  width 100%
  position relative
  text-align center

  &--line
    width 100%
    border-top 1px solid $black_mid
    height 1px
    margin-top -8px
    display block
    position absolute
    z-index 1


  span
    font-size 14px
    color $black_mid
    font-weight 400
    padding-left 15px
    padding-right 15px
    background #fff
    position relative
    z-index 2

  i
    display block!important
    margin 0 auto 5px auto
    position relative
    z-index 2


.sep-bubble
  height 50px

  &--up
    before()

    &:before
      width 7px
      height 7px
      border-radius 3px
      background-color $pink
      position absolute
      right -4px
      left auto
      top 0

  &--vt-r
    border-right 1px solid $gray

  &--title
    color $gray
    font-size 11px
    font-weight 600
    position absolute
    right 10px
    top -4px

.sep-shiny-bot
    after()

    &:after
      background url(../images/row-shine.png) center top no-repeat
      width 100%
      height 87px
      top auto
      bottom -50px
      left 0

.sep-shiny-top
    after()

    &:after
      background url(../images/row-shine-b.png) center top no-repeat
      width 100%
      height 87px
      top -87px
      left 0
