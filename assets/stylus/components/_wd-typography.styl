.wpd-workspace
	color #526475
	font-size 14px

	h1, h2, h3, h4, h5, h6, p, blockquote, a
		font-style normal
		letter-spacing normal
		margin 0 0 10px

	h1, h2, h3, h4, h5, h6, p
		text-transform none
		font-weight normal

	h1
		font-size 36px
		line-height 150%;

	h2
		font-size 32px
		line-height 46px

	h3
		font-size 28px
		line-height 42px

	h4
		font-size 24px
		line-height 38px

	h5
		font-size 20px
		line-height 34px

	h6
		font-size 16px
		line-height 30px

	p
		display block
		line-height 1.6em

	a
		color #09a0f6
		
	blockquote
		display block
		background #fff
		padding 15px 20px 15px 25px
		margin 0 0 20px
		border-left 5px solid #09a0f6
		font-family Georgia, serif
		font-size 16px
		line-height 1.2em
	  
	.wd-richtext
		clearfix()

	.wd-icon
		display inline-block
		font-size 35px