.wpd-bg-image
	position relative
	
	&__img
		float left
		width 63px
		height 63px
		border 1px solid $color19
		border-radius 2px
		margin-right 8px
		
		img
			display block
			width 61px
			height 61px
			border 1px solid $color24
			border-radius 2px
			
	&__details
		padding-left 73px
		
		li
			margin-bottom 6px
			color $color13
			font-size 11px
			overflow ellipsis
			
			&:last-child
				margin-bottom 0
			
			i
				margin-right 7px
				
			&.prop
				opacity .8