.wpd-popover
	background $color1
	color $color13
	font-size 11px
	padding 25px 5px 10px
	border 1px solid $color4
	border-radius 2px
	z-index $dropdown_popOver
	box-shadow inset 0 0 2px 1px $color8, 0 0 10px 0px $box_shadow_color
	position absolute
	box-sizing border-box
	width 224px
	left 8px
	display none
	
	&__arrow
		position absolute
		width 0
		height 0
		border-style solid
		border-width 12px 12px 0 12px
		border-color $color1 transparent transparent transparent
		top auto
		bottom -10px
		left 0
		
	&__close
		display block
		top -1px
		left auto
		right 9px
		background linear-gradient(top, $color10, $color21)
		width 18px
		height 18px
		border 1px solid $color5
		border-bottom-left-radius 2px
		border-bottom-right-radius 2px
		after(type = absolute)
		text-align center
		z-index 1
		text-decoration none
		cursor pointer
		
		&:after
			font-family 'FontAwesome'
			content "\f00d"
			position relative
			display inline-block
			font-size 12px
			color $color13
			line-height 18px
		
		&:hover
			background $color10
			
			&:after
				color $color12
		
		&--b
			top 0
			left auto
			right 0
			background transparent
			width 33px
			height 33px
			border 0
			border-radius 0
			after(type = absolute)
			text-align center
			z-index 20
			text-decoration none
			
			&:after
				font-family 'FontAwesome'
				content "\f00d"
				position relative
				display inline-block
				font-size 12px
				color $color13
				line-height 34px
			
			&:hover
				background transparent
				
	&.pos-bot
		.wpd-popover__arrow
			position absolute
			width 0
			height 0
			border-style solid
			border-width 0 12px 12px 12px
			border-color transparent transparent $color1 transparent
			top -10px
			bottom auto
			left 0
			
	&--no-close-button
		padding-top 10px
		
	&--b
		position fixed
		top 34px
		left 41px
		width 256px
		height 100%
		padding 0
		background $color31
		border 0
		border-top 1px solid $color4
		border-bottom 1px solid $color4
		border-right 1px solid $color4
		border-radius 0
		z-index $dropdown_popOver
		box-shadow none
		after($type = fixed)
		
		&:after
			position absolute
			top 0
			left -6px
			width 6px
			height 100%
			background $color10
			border-right 1px solid $color4
			box-sizing border-box
			
		.wpd-scroll--b
			height calc(100% - 65px) !important
			
	&__title
		line-height 33px
		padding 0 8px
		font-size 16px
		text-shadow $text_shadow
		padding-right 40px
		overflow ellipsis
		border-bottom 1px solid $color43
		box-shadow: 0 2px 5px 0 $box_shadow_color
		position relative
		z-index 11
		
	&--active
		display block

.wpd-overlay
	position fixed
	top 0
	left auto
	right 0
	width 239px
	height 100%
	background $color_overlay
	z-index $overlay_zIndex
	
.wpd-pop-open
	z-index $dropdown_popOver 
	outline 1px solid $color5
	position relative
	z-index 101 !important
	
#wpd-popovers
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	overflow hidden

	
