.remodal-wrapper
  z-index 8000
  
  .remodal, 
  .remodal-wrapper:after
    vertical-align top
    
  .remodal
    padding 30px
    margin-top 60px
    min-height 550px
    
    @media ( max-width: 1000px )
      &.trailers-modal
        padding 5px
    
    @media ( max-width: 767px )
      margin-top 0
      &.trailers-modal
        padding 0
        
        .close-remodal
          right 10px !important

.remodal
  max-width 1000px;
    
.remodal-overlay
  background $white
  z-index 7999
  
  &.darkness
    background url(../images/black.9-overlay.png) repeat
  
.close-remodal 
  display block
  position absolute
  right 35px
  top 35px
  left auto
  z-index 7000
    
.user-login-box
  padding 0 50px 50px
  after()
  
  @media ( max-width: 767px )
    padding-left 0
    padding-right 0
  
  &:after 
    width 1px
    height 80%
    left auto
    right 0
    top 65px
    background #e5e5e5
    
  &.sign-in
    &:after
      display none
    
    max-width 510px
    margin 0 auto
    padding 0
    text-align left
    
    .gap
      height 124px
      
      @media ( max-width: 767px )
        display none
  
  &__title 
    text-align center
    font-size 32px
    color $black
    font-weight 400
    
    span
      display block 
      
  @media ( max-width: 767px )
    &:after 
      display none
    
      
.modal-promo-box
  padding 0 30px
  text-align center
  
  @media ( max-width: 767px )
   padding 0 0 20px
  
  &__img 
    display block
    margin-bottom 5px
    
  &__title
    font-size 40px
    text-align center
    font-weight 600
    letter-spacing -3px
    
  &__sub-title
    font-size 22px
    font-weight 600
    
  p 
    font-size 14px
    margin-bottom 30px
    
.search-box
  padding-top 50px
  
  &__title 
    text-align center
    font-size 32px
    color $black
    font-weight 400
    margin-bottom 5px
    
    @media ( max-width: 767px )
      font-size 20px
    
    span
      display block 
      
.advantage-addition,
.setting-password,
.warning-modal,
.offers-modal,
.trailers-modal
  background transparent
  
.remodal-regular-title
  text-align center
  color $white
  font-size 26px
  font-weight 300
  padding-top 80px
  margin 0 0 5px
  position relative
  z-index 2
  padding-left 10px
  padding-right 10px
  box-sizing(border-box)
  
.remodal-regular-intro
  text-align center
  max-width 500px
  color $white
  font-size 14px
  margin 0 auto 20px
  position relative
  z-index 2
  padding-left 10px
  padding-right 10px
  box-sizing(border-box)
  
  &.narrow  
    max-width 290px
  
.remodal-regular-content
  max-width 620px
  background $white
  border-radius 3px
  margin 100px auto 0
  padding 20px
  box-sizing(border-box)
  position relative
  
  .remodal-regular-title,
  .remodal-regular-intro
    color $dark_gray  
    padding-top 0
    
  .remodal-regular-title
    padding-top 40px
    
  .marsgate-outside
    display block
    position absolute
    top -55px
    left 50%
    margin-left -138px
    width 277px  
    
.remodal-warning-content
  max-width 373px
  background $white
  border-radius 3px
  margin 100px auto 0
  padding 20px
  box-sizing(border-box)
  position relative
  
  .remodal-regular-title,
  .remodal-regular-intro
    color $dark_gray  
    padding-top 0
    
  .remodal-regular-title
    padding-top 40px
    
    &.failure
      after()
      padding-top 74px
      
      &:after
        //retinaSprite($failure_group)
        left 50%
        margin-left -29px
        top 10px
        
    &.success
      after()
      padding-top 74px
      
      &:after
        //retinaSprite($success_group)
        left 50%
        margin-left -27px
        top 10px
        
    &.error
      after()
      padding-top 74px
      
      &:after
        //retinaSprite($error_group)
        left 50%
        margin-left -26px
        top 10px
    
.remodal-little-form
  width 350px
  margin 0 auto
  
  .col-sm-6
    padding 0
    
    &:first-child
      padding-right 4px;
    &:last-child
      padding-left 4px;
  
@media ( max-width: 767px )
  .remodal
    padding 0 5px
    
  .remodal-regular-title
    padding-left 10px
    padding-right 10px
    
  .remodal-regular-intro
    max-width 100%
    padding-left 10px
    padding-right 10px
