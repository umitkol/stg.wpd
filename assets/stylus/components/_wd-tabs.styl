.wpd-workspace

  .wd-tabs
    margin-bottom 10px

  .wd-tabs-menu
    overflow hidden

  .wd-tab-link
    border-bottom 2px solid #d1e1e8
    cursor pointer
    background-color #f6f8fa
    font-weight 400
    float left
    margin-right 1px
    padding 10px 20px

  .wd-tab-link--active
    border-bottom 2px solid #526475
    background-color #f1f5fa
    color #526475
    font-weight 400
    float left
    margin-right  1px
    padding 10px 20px

  .wd-tab-pane
    display none

  .wd-tab-pane--active
    display block