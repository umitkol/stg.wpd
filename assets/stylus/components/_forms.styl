.form-container
  &.two-col
    .col-sm-6
      padding-left 7px
      padding-right 7px
      
    .row
      margin-left -7px
      margin-right -7px
      
    .total-result
      margin-top 10px
      
      @media ( max-width: 767px )
        margin-top 0

.form-item
  padding-bottom 20px
  position relative
  
  ul,
  ol
    list-style none
    margin-left 0
    margin-bottom 0
    
  .search-button
    position absolute
    background-color transparent
    retinaSprite($magnify_group)
    top 15px
    right 10px
    left auto
    border none
    outline none


