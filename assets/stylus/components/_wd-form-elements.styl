.wpd-workspace
  
  .wd-button
    text-decoration none
    color #fff
    display inline-block
    background-color #09a0f6
    border 0
    border-radius 5px
    font-size 16px
    line-height 28px
    padding 8px 20px
    
  .wd-label
    display block
    margin-bottom 5px
    font-weight bold

  .wd-input,
  .wd-select
    padding 10px
    outline 0
    margin 0 0 20px
    font-size 16px
    font-weight 300
    display inline-block
    height 40px

    width 100%
    border 1px solid #d1e1e8
    border-radius 5px
    line-height 40px
    resize none
  
  textarea.wd-input
    height 150px