.wpd-button
	width 48px
	height 23px
	line-height 23px
	background: linear-gradient(top, $color15, $color10);
	color $color13
	font-size 14px
	text-align center
	position relative
	cursor pointer
	border 1px solid $color5
	
	&:focus
		outline none
		
	.wp-i,
	.wpd-i
		font-family WpdIconFont
		position absolute
		top 50%
		margin-top -9px
		left 0
		width 100%
		font-size 18px
		
	.double-icon
		i
			display inline-block
			font-size 6px
			top 14px
			
			&:first-child
				width auto
				left 5px
			
			&:last-child
				width auto
				left auto
				right 5px
				
	&--local
		i
			color $color16
				
	&--global
		i
			color $color23
			
	&--text
		width auto
		padding 0 7px
		font-size 11px
		
	&--b
		width 22px
		font-size 12px
		
		i 
			font-size 12px
			margin-top -6px
		
	&--c
		width 32px
		font-size 14px
		
		i
			font-size 10px
			margin-top -5px
				
	&--d
		display inline-block
		height 32px
		line-height 32px
		background: linear-gradient(top, $color15, $color10);
		color $color13
		font-size 11px
		text-align center
		position relative
		cursor pointer
		border 1px solid $color5
		text-decoration none
		padding 0 15px
		border-radius 2px
		box-sizing border-box
		width auto
				
	&--e
		display inline-block
		height 23px
		line-height 23px
		background: linear-gradient(top, $color15, $color10);
		color $color13
		font-size 11px
		text-align center
		position relative
		cursor pointer
		border 1px solid $color5
		text-decoration none
		padding 0 15px
		border-radius 2px
		box-sizing border-box
		width auto
		
	&--f
		display inline-block
		height 32px
		line-height 32px
		background: linear-gradient(top, $color15, $color10);
		color $color13
		font-size 20px
		text-align center
		position relative
		cursor pointer
		border 1px solid $color5
		text-decoration none
		padding 0 15px
		border-radius 2px
		box-sizing border-box
		width auto
		
		i
			margin-top -10px
		
	&--g
		display inline-block
		height 34px
		line-height 34px
		width auto
		min-width 35px
		background $color1
		color $color13
		font-size 24px
		text-align center
		position relative
		cursor pointer
		border-color $color4 !important
		border-left 1px solid $color4
		border-right 1px solid $color4
		border-bottom none
		border-top none
		text-decoration none
		padding 0 10px
		border-radius 0 !important
		box-sizing border-box
		
		i
			font-size 24px
			position relative
			top auto
			margin-top 0
			left auto
			width auto
			display inline-block
			top 2px
			
		&--smaller
			font-size 15px
			
		&:hover
			background $color1
			
		&.wpd-button--active
			color $color12
			
			
	&--h
		width 44.8px
		height 30px
		font-size 16px
		
		i
			font-size 16px
			margin-top -8px
			
	&--has-static-icon
		i
			display inline-block
			margin-right 5px
			position static
			width auto
			
	&--full
		display block
		width 100%
		
	&:disabled
		opacity $disabled_opacity
		cursor not-allowed
		
		&:hover
			background: linear-gradient(top, $color15, $color10);
			
	&:hover
		background $color15
		color $color12
		
	&:active,
	&:focus
		color $color12
		
	&--active
		background linear-gradient(top, $color19, $color20)
		border-color $color14
		color $color12
					
		&:hover
			background linear-gradient(top, $color19, $color20)

.wpd-button-group
	clearfix()
	
	.wpd-button
		float left
		border-right 0
		
		&:first-child
			border-top-left-radius 2px
			border-bottom-left-radius 2px
		
		&:last-child
			border-top-right-radius 2px
			border-bottom-right-radius 2px
			border-right 1px solid $color5
			
		&--active
			border-right 1px solid $color14
			
			&+.wpd-button
				border-left 0
				
			&:last-child
				border-color $color14
				
		&--break
			margin-right 5px
			border-right 1px solid $color5
			border-top-right-radius 2px
			border-bottom-right-radius 2px
				
		&--break-b
			margin-right 10px
			border-right 1px solid $color5
			border-top-right-radius 2px
			border-bottom-right-radius 2px
			
	.wpd-button.wpd-button--break + .wpd-button,
	.wpd-button.wpd-button--break-b + .wpd-button
		border-top-left-radius 2px
		border-bottom-left-radius 2px
				
	&--border-handler
		position relative
		float left
		width 72px
		height 73px
		
		.wpd-button
			width 22px
			font-size 12px 
			border 1px solid $color5 !important
			float none
			position absolute 	
			
			&--active
				border 1px solid $color14 !important
			
			&--top
				top 0
				left 25px
			
			&--right
				top 25px
				left 50px
			
			&--bottom
				top 50px
				left 25px
			
			&--left
				top 25px
				left 0
			
			&--center
				top 25px
				left 25px
				
				i
					font-size 16px
				
	&--radius-handler
		position relative
		float left
		width 72px
		height 48px
		
		.wpd-button
			width 22px
			font-size 12px  
			border 1px solid $color5 !important
			float none
			position absolute
			
			&--active
				border 1px solid $color14 !important

			&--top-left
				top 0
				left 0px
			
			&--top-right
				top 0px
				left 50px
			
			&--bottom-left
				top 25px
				left 0px
			
			&--bottom-right
				top 25px
				left 50px
			
			&--center
				top 14px
				left 25px
				
				i
					font-size 16px
					transform rotateZ(-45deg)
					margin-top -8px
					
	&--position-handler
		position relative
		width 72px
		height 73px
		
		.wpd-button
			width 22px
			font-size 12px 
			border 1px solid $color5 !important
			float none
			position absolute
			
			&--active
				border 1px solid $color14 !important
			
			&--top-left
				top 0
				left 0
				
			&--top
				top 0
				left 25px
				
			&--top-right
				top 0
				left 50px
				
			&--right
				top 25px
				left 50px
				
			&--bottom-right
				top 50px
				left 50px
			
			&--bottom
				top 50px
				left 25px
			
			&--bottom-left
				top 50px
				left 0
				
			&--left
				top 25px
				left 0
				
			&--center
				top 25px
				left 25px
				
	&--platform
		width auto
		display inline-block
		
	&--narrow
		.wpd-button
			width 40px
		
.wpd-button-group-heading 
	.wpd-button--text
		font-size 14px
		font-weight bold
		width 37px
		height 30px
			
.wpd-button-b
	display inline-block
	height 32px
	line-height 32px
	background: linear-gradient(top, $color15, $color10);
	color $color13
	font-size 11px
	text-align center
	position relative
	cursor pointer
	border 1px solid $color5
	text-decoration none
	padding 0 15px
	border-radius 2px
	box-sizing border-box
	
	&--full
		display block
		width 100%
	
	&--local
		color $color16
				
	&--global
		color $color23
		
	&--has-static-icon
		i
			display inline-block
			margin-right 5px
	
	&:hover
		background $color15
		color $color12

	&:active,
	&:focus
		color $color12

.wpd-flex-button-group
	display flex

	> *
		float none !important
		flex 1

.wpd-map-button-group > *
	padding-left 0 !important
	padding-right 0 !important