.table
  &--regular
  width 100%

  tbody
    th
      text-align left
      font-size 14px
      color $light_grey
      line-height 1.4em
      padding 0 5px 5px 0
      vertical-align top

    td
      font-size 14px
      color $light_grey
      line-height 1.4em
      padding 0 0 5px 5px
      vertical-align top

  &--patterned 
    width 100%
    margin-bottom 30px
    
    th
      text-align center
      font-weight 700
      font-size 12px
      color $tundora
      padding 10px 8px
      border-bottom 1px solid #e5e5e5
      border-left 1p solid #e5e5e5
      
      &:first-child
        text-align left
        border-left none
        
    td
      text-align center
      font-size 12px
      color $light_grey
      padding 10px 8px
      border-bottom 1px solid #e5e5e5
      border-left 1p solid #e5e5e5
      background $white
      
      &:first-child
        text-align left
        border-left none
        
    tr:nth-child(2n+1)
      td
        background $concrete
        
    tfoot
      td
        background $white !important
        
.table-container
  width auto
  overflow-x auto
  
.default-content-area
  table
    th,
    td
      color $light_grey
      padding 4px 2px
      font-size 12px
      
    td:first-child
      padding-left 0