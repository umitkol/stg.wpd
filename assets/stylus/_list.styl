.list
  &--regular
    list-style disc
    margin-left 20px
    margin-bottom 30px
    
    li
      color $light_grey
      font-size 14px
      line-height 1.4em
      margin 0 0 5px 0
      
  &--plain
    margin-bottom 30px
    
    li
      color $light_grey
      font-size 14px
      line-height 1.4em
      margin 0 0 5px 0
      
  &--section
    li
      padding 30px 60px 30px 0
      border-bottom 1px solid #e5e5e5
      position relative
      
      p 
        margin-bottom 0
        
      &:first-child
        border-top 1px solid #e5e5e5
      &:last-child
        margin-bottom 30px
        
      .more
        display block
        retinaSprite($more_arrow_group)
        position absolute
        top 50%
        right 0
        left auto
        margin-top -16px
        
      
.default-content-area
  ol
    margin-bottom 30px
    list-style none
    margin-left -40px
    
    li
      color $light_grey
      font-size 14px
      line-height 1.4em
      margin 0 0 5px 0
  
  ul
    list-style disc
    margin-left 20px
    margin-bottom 30px
    
    li
      color $light_grey
      font-size 14px
      line-height 1.4em
      margin 0 0 5px 0
      
      > ul
        list-style circle
        margin-top 7px